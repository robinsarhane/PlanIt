<script>
  function startTypingEffect(element, text, speed = 150) {
    let i = 0;
    function typeChar() {
      if (i < text.length) {
        element.innerHTML = text.slice(0, i + 1) + "|";
        i++;
        setTimeout(typeChar, speed);
      } else {
        element.innerHTML = text;
      }
    }
    typeChar();
  }

  const typingTitle1 = document.getElementById("typing-title"); // What We Do
  const typingTitle2 = document.getElementById("typing-creators-title"); // Meet the Creators!

  let typed1 = false;
  let typed2 = false;

  const observer = new IntersectionObserver(entries => {
    entries.forEach(entry => {
      if (entry.target === typingTitle1 && entry.isIntersecting && !typed1) {
        startTypingEffect(typingTitle1, "What We Do.", 150);
        typed1 = true;
      }
      if (entry.target === typingTitle2 && entry.isIntersecting && !typed2) {
        startTypingEffect(typingTitle2, "Meet the Creators!", 150);
        typed2 = true;
      }
    });
  }, { threshold: 0.5 });

  observer.observe(typingTitle1);
  observer.observe(typingTitle2);
</script>


